<div class="">
  <h1>New Blood Glucose Reading</h1>

  <%= form_for(@new_glucose_reading, as: :blood_glucose, :url => {:action => "create"} ) do |f| %>

    <h3>
      Timing: <%= DateTime.now.strftime("%d %b %Y %I:%M%p") %>
    </h3>
    
    <p>
      <%= f.label :glucose_level, 'Blood Glucose Level: ' %>
      <%= f.number_field :level, min: 10 %>
    </p>

    <p>
      <%= f.label :checked_at, 'Blood Glucose Level Checked at: ' %>
      <%= f.datetime_select :checked_at %>
    </p>

    

    <div class="actions">
      <%= f.submit "Confirm" %> 
    </div>

  <% end %>
     <br/>
    <%= button_to 'Cancel', :back, method: :get %>
</div>